{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "target": "ES2022",             // modern JS features
    "module": "NodeNext",           // use Node's ESM loader
    "moduleResolution": "NodeNext", // important for ESM
    "lib": ["ES2022"],
    "types": ["node"],              // enable Node.js types

    /* Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,                 // don't output when using tsx

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Style (optional stricter rules) */
    // "noImplicitReturns": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,

    /* Module Options */
    "esModuleInterop": true,        // allow default imports
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
